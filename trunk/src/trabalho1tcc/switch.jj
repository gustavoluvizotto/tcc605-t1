TOKEN : { < EOL : "\n" | "\r" | "\r\n" > }
TOKEN : { < LETTER : ["a"-"z","A"-"Z","_"] > }
TOKEN : { < DIGIT : ["0"-"9"] > }

TOKEN : { < PLUS : "+" > }
TOKEN : { < MINUS : "-" > }
TOKEN : { < TIMES : "*" > }
TOKEN : { < DIV: "/" > }
TOKEN : { < PERCENT : "%" > }

TOKEN : { < OPAR : "(" > }
TOKEN : { < CPAR : ")" > }
TOKEN : { < OBRA : "{" > }
TOKEN : { < CBRA : "}" > }

TOKEN : { < WHILE : "while" > }
TOKEN : { < IF : "if" > }
TOKEN : { < ELSE : "else" > }

TOKEN : { < SWITCH : "switch" > }
TOKEN : { < CASE: "case" > }
TOKEN : { < COLON : ":" > }
TOKEN : { < DEFLT: "default" > }
TOKEN : { < BREAK: "break" > }

TOKEN : { < INT: "int" > }
TOKEN : { < VOID: "void" > }

TOKEN : { < EQU : "==" > }
TOKEN : { < LEQU : "<=" > }
TOKEN : { < GEQU : ">=" > }
TOKEN : { < LESS : "<" > }
TOKEN : { < GREAT : ">" > }
TOKEN : { < NEQU : "!=" > }

TOKEN : { < NOT : "!" > }
TOKEN : { < AND : "&&" > }
TOKEN : { < OR : "||" > }

TOKEN : { < ASSIGN : "=" > }
TOKEN : { < COMMA : "," > }
TOKEN : { < SEMICOL : ";" > }

    void Program() :
    {
        String string;
        Token t;
    }
    {   
        ( VariableDeclaration() )* ProcedureDeclaration() 
        ( ProcedureDeclaration() )*
        <EOF>
    }

    String ProcedureDeclaration() :
    {
        String string;
        Token t;
    }
    {
        t = <VOID> ProcedureHeading() <OBRA> ProcedureBody() <CBRA>
        {
            string = t.image;
            return string;
        }
    }

    String ProcedureBody() :
    {
        String string;
        Token t;
    }
    {
        t = (VariableDeclaration())* StatementSequence()
        {
            string = t.image;
            return string;
        }
    }

    String ProcedureHeading() :
    {
        String string;
        Token t;
    }
    {
        t = Ident() <OPAR> (Parameter())? <CPAR>
        {
            string = t.image;
            return string;
        }
    }

    String ParametersList() :
    {
        String string;
        Token t;
    }
    {
        t = Parameter() ( <COMMA> Parameter())*
        {
            string = t.image;
            return string;
        }
    }

    String Parameter() :
    {
        String string;
        Token t;
    }
    {
        t = <INT> Ident()
        {
            string = t.image;
            return string;
        }
    }

    String VariableDeclaration() :
    {
        String string;
        Token t;
    }
    {
        t = <INT> IdentList() <SEMICOL>
        {
            string = t.image;
            return string;
        }
    }
    
    String IdentList() : 
    {
        String string;
        Token t;
    }
    {
        t = Ident() ( Assignment() )? ( <COMMA> IdentList() )*
        {
            string = t.image;
            return string;
        }
    }

    String StatementSequence() : 
    {
        String string;
        Token t;
    }
    {
        t = ( Statement() )*
        {
            string = t.image;
            return string;
        }
    }
    
    String LoopStatementSequence() : 
    {
        String string;
        Token t;
    }
    {
        t = ( Statement() | Break() )*
        {
            string = t.image;
            return string;
        }
    }

    String Statement() :
    {
        String string;
        Token t;
    }
    {
        t = ( (Ident() (Assignment() | ProcedureCall() ) | WhileStatement() | 
        SelectionStatement() ) <SEMICOL> (<SEMICOL>)* )?
        {
            string = t.image;
            return string;
        }
    }

    String WhileStatement() :
    {
        String string;
        Token t;
    }
    {
        t = <WHILE> <OPAR> Expression() <CPAR> <OBRA> LoopStatementSequence() <CBRA>
        {
            string = t.image;
            return string;
        }
    }

    String SelectionStatement() :
    {
        String string;
        Token t;
    }
    {
        t = IfStatement() | SwitchStatement()
        {
            string = t.image;
            return string;
        }
    }

    String SwitchStatement() :
    {
        String string;
        Token t;
    }
    {
        t = <SWITCH> <OPAR> Expression() <CPAR> <OBRA> (LoopStatementSequence())*
        (<CASE> ConstantExpression() <COLON> LoopStatementSequence())* 
        (<DEFLT> <COLON> LoopStatementSequence())? <CBRA>
        {
            string = t.image;
            return string;
        }
    }
    
    String Break() :
    {
        String string;
        Token t;
    }
    {
        t = <BREAK> <SEMICOL>
        {
            string = t.image;
            return string;
        }
    }

    String IfStatement() :
    {
        String string;
        Token t;
    }
    {
        t = <IF> <OPAR> Expression() <CPAR> <OBRA> LoopStatementSequence() <CBRA>
        (<ELSE> <OBRA> LoopStatementSequence() (Break())? <CBRA> )?
        {
            string = t.image;
            return string;
        }
    }

    String ProcedureCall() :
    {
        String string;
        Token t;
    }
    {
        t = <OPAR> (ExpList())? <CPAR>
        {
            string = t.image;
            return string;
        }
    }

    String ExpList() :
    {
        String string;
        Token t;
    }
    {
        t = Expression() (<COMMA> Expression())*
        {
            string = t.image;
            return string;
        }
    }

    String Assignment() :
    {
        String string;
        Token t;
    }
    {
        t = <EQU> Expression()
        {
            string = t.image;
            return string;
        }
    }

    String ConstantExpression() :
    {
        String string;
        Token t;
    }
    {
        t = ConstantOrExpr()
        {
            string = t.image;
            return string;
        }
    }

    String ConstantOrExpr() :
    {
        String string;
        Token t;
    }
    {
        t = ConstantAndExpr() (<OR> ConstantAndExpr())?
        {
            string = t.image;
            return string;
        }
    }

    String ConstantAndExpr() :
    {
        String string;
        Token t;
    }
    {
        t = ConstantEqualityExpr() ( <AND> ConstantEqualityExpr() )*
        {
            string = t.image;
            return string;
        }
    }

    String ConstantEqualityExpr() :
    {
        String string;
        Token t;
    }
    {
        t = ConstantInequationExpr() ( ( <EQU> | <NEQU> ) ConstantInequationExpr() )?
        {
            string = t.image;
            return string;
        }
    }

    String ConstantInequationExpr() :
    {
        String string;
        Token t;
    }
    {
        t = ConstantSimpleExpr() ( (<LESS> | <LEQU> | <GREAT> | <GEQU>) ConstantSimpleExpr() )?
        {
            string = t.image;
            return string;
        }
    }

    String ConstantSimpleExpr() :
    {
        String string;
        Token t;
    }
    {
        t = (<PLUS>)? ConstantTerm() ( (<PLUS> | <MINUS>) ConstantTerm() )*
        {
            string = t.image;
            return string;
        }
    }

    String ConstantTerm() :
    {
        String string;
        Token t;
    }
    {
        t = ConstantUnary() ( (<TIMES> | <DIV> | <PERCENT>) ConstantUnary() )*
        {
            string = t.image;
            return string;
        }
    }

    String ConstantUnary() :
    {
        String string;
        Token t;
    }
    {
        t = UnaryOperator() ConstantUnary() | ConstantFactor()
        {
            string = t.image;
            return string;
        }
    }
    
    String ConstantFactor() : 
    {
        String string;
        Token t;
    }
    {
        t = Number() | <OPAR> ConstantExpression() <CPAR>
        {
            string = t.image;
            return string;
        }
    }

    String Expression() :
    {
        String string;
        Token t;
    }
    {
            t = OrExpr()	
            {
                string = t.image;
                return string;
            }
    }

    String OrExpr() :
    {
        String string;
        Token t;
    }
    {
            t = AndExpr() ( <OR> AndExpr() )*
            {
                string = t.image;
                return string;
            }
    }

    String AndExpr() :
    {
        String string;
        Token t;
    }
    {
            t = EqualityExpr() ( <AND> EqualityExpr() )*
            {
                string = t.image;
                return string;
            }
    }

    String EqualityExpr() :
    {
        String string;
        Token t;
    }
    {
            t = InequationExpr() ( ( <EQU> | <NEQU> ) InequationExpr() )?
            {
                string = t.image;
                return string;
            }    
    }

    String InequationExpr() :
    {
        String string;
        Token t;
        
    }
    {
           t = SimpleExpr() ( ( <LESS> | <LEQU> | <GREAT> | <GEQU> ) SimpleExpr() )?
           {
                string = t.image;
                return string;
           }
 
    }

    String SimpleExpr() :
    {
        String simpleExp_;
        Token  t_simpleExp;
    }
    {
            t_simpleExp = ( <PLUS> )? Term() ( ( <PLUS> | <MINUS> ) Term() )*
            {
                simpleExp_ = t_simpleExp.image;
                return simpleExp_;
            }
    }

    String Term() :
    {
        String term_;
        Token t_term;
    }
    {
            t_term = Unary() ( ( <TIMES> | <DIV> | <PERCENT> ) Unary() )*
            {
                term_ = t_term.image;
                return term_;
            }    
    }

    String Unary() :
    {
        String unary_;
        Token t_unary;
    }
    {
            t_unary = UnaryOperator() Unary() | Factor()
            {
                unary_ = t_unary;
                return unary_;
            }
    }

    String Factor() :
    {
        String factor_;
        Token t_factor;
    }
    {
            t_factor = Ident() | Number() | <OPAR> Expression() <CPAR>
            {
                factor_ = t_factor.image;
                return factor_;
            }    
    }

    String UnaryOperator() :
    {
        String unary_;
        Token t_unary;
    }
    {
            t_unary = <NOT> | <MINUS>
            {
                unary_ = t_unary.image;
                return unary_;
            }
    }

    String Ident() :
    {
        String ident_;
        Token t_ident;
    }
    {
        

        t_ident = <LETTER> ( <LETTER> | <DIGIT> )*
        {  
            ident_ = t_ident.image;
            return ident_;
        }
    }
    
